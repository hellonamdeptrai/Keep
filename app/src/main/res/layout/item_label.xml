<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_label_item"
    android:layout_marginBottom="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/ic_outline_label_24"
        android:layout_marginEnd="@dimen/margin_label"/>

    <EditText
        android:id="@+id/edit_text_label"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="text"
        android:background="@null"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/text_label"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_label"
        android:gravity="center_vertical"/>
    <ImageButton
        android:id="@+id/image_button_edit_done_label"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_done_24"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_label">
        <ImageButton
            android:id="@+id/image_button_edit_label"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_edit_24"
            style="?android:attr/borderlessButtonStyle"/>
        <ImageButton
            android:id="@+id/image_button_delete_label"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_outline_delete_24"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>