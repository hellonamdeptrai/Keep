<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Keep.AppWidget.Container"
    android:theme="@style/Theme.Keep.AppWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <ImageView
        android:id="@+id/button_add_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginEnd="@dimen/normal_padding"/>
    <ImageView
        android:id="@+id/button_add_check_box_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_check_box_24"
        android:layout_marginEnd="@dimen/normal_padding"/>
    <ImageView
        android:id="@+id/button_add_mic_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_mic_none_24"
        android:layout_marginEnd="@dimen/normal_padding"/>
    <ImageView
        android:id="@+id/button_add_brush_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_brush_24"
        android:layout_marginEnd="@dimen/normal_padding"/>
    <ImageView
        android:id="@+id/button_add_image_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_image_24"
        android:layout_marginEnd="@dimen/normal_padding"/>
</LinearLayout>
